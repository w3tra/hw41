<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
        <h3><%= @title %></h3>
          <% @users.each do |user| %>
            <%= image_tag user.avatar(:thumb) %>
            <%= link_to "#{user.name}", user_path(user) %> <br>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
</div>